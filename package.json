  "license": "MIT",
  "homepage": "https://github.com/KID-joker/vue-observer-hooks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KID-joker/vue-observer-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/KID-joker/vue-observer-hooks/issues"
  },
  "keywords": [
